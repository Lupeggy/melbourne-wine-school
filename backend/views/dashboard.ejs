<div class="bg-white">
  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="bg-gradient-to-r from-red-700 to-red-800 rounded-lg shadow-xl overflow-hidden lg:grid lg:grid-cols-2 lg:gap-4">
      <div class="pt-10 pb-12 px-6 sm:pt-16 sm:px-16 lg:py-16 lg:pr-0 xl:py-20 xl:px-20">
        <div class="lg:self-center">
          <h2 class="text-3xl font-extrabold text-white sm:text-4xl">
            <span class="block">Welcome back, <span class="text-yellow-300"><%= user.name || 'Wine Enthusiast' %></span>!</span>
          </h2>
          <p class="mt-4 text-lg leading-6 text-red-100">
            Check out your upcoming events, courses, and membership details below.
          </p>
          <div class="mt-8 flex">
            <a href="/courses" class="bg-white border border-transparent rounded-md shadow px-5 py-3 inline-flex items-center text-base font-medium text-red-700 hover:bg-red-50">
              Browse Courses
            </a>
          </div>
        </div>
      </div>
      <div class="-mt-6 aspect-w-5 aspect-h-3 md:aspect-w-2 md:aspect-h-1">
        <img class="transform translate-x-6 translate-y-6 rounded-md object-cover object-left-top sm:translate-x-16 lg:translate-y-20" src="/images/dashboard-hero.jpg" alt="Wine glasses">
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mt-12">
      <h2 class="text-2xl font-bold text-gray-900">Your Upcoming Events</h2>
      <div class="mt-6 grid gap-6 lg:grid-cols-3 lg:gap-8">
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Wine Tasting Evening</h3>
            <div class="mt-2 text-sm text-gray-500">
              <p>June 15, 2023 • 6:30 PM</p>
              <p class="mt-1">Learn about Italian wines with our sommelier.</p>
            </div>
            <div class="mt-4">
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">
                Confirmed
              </span>
            </div>
          </div>
        </div>
        <!-- More events can be added here -->
      </div>
    </div>

    <div class="mt-12">
      <h2 class="text-2xl font-bold text-gray-900">Your Courses</h2>
      <div class="mt-6 grid gap-6 lg:grid-cols-2 lg:gap-8">
        <div class="bg-white overflow-hidden shadow rounded-lg
                 border-l-4 border-red-700">
          <div class="px-4 py-5 sm:p-6">
            <div class="flex items-center">
              <div class="flex-shrink-0 bg-red-100 p-3 rounded-md">
                <svg class="h-6 w-6 text-red-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div class="ml-5">
                <h3 class="text-lg leading-6 font-medium text-gray-900">Wine Fundamentals</h3>
                <p class="mt-1 text-sm text-gray-500">In Progress • 2 of 4 weeks completed</p>
              </div>
            </div>
            <div class="mt-4">
              <div class="w-full bg-gray-200 rounded-full h-2.5">
                <div class="bg-red-700 h-2.5 rounded-full" style="width: 50%"></div>
              </div>
            </div>
          </div>
        </div>
        <!-- More courses can be added here -->
      </div>
    </div>
  </div>
</div>
