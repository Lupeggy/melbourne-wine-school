<div class="bg-white py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
        Our Wine Courses
      </h1>
      <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-500 sm:mt-4">
        Expert-led courses for wine enthusiasts of all levels
      </p>
    </div>

    <div class="mt-12 grid gap-8 lg:grid-cols-3 lg:gap-8">
      <% courses.forEach(course => { %>
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="h-48 bg-gray-200 overflow-hidden">
            <img 
              src="<%= course.image || 'https://via.placeholder.com/400x200' %>" 
              alt="<%= course.title %>" 
              class="w-full h-full object-cover">
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-900"><%= course.title %></h3>
            <p class="mt-2 text-gray-600"><%= course.description %></p>
            <div class="mt-4 flex items-center justify-between">
              <span class="text-lg font-medium text-gray-900">$<%= course.price %></span>
              <span class="text-sm text-gray-500"><%= course.duration %></span>
            </div>
            <div class="mt-6">
              <a href="/courses/<%= course.id %>" class="w-full flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700">
                Buy Now
              </a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>

    <div class="mt-12 text-center">
      <h2 class="text-2xl font-extrabold text-gray-900 sm:text-3xl">
        Not sure which course is right for you?
      </h2>
      <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-500">
        Contact our education advisors who can help you choose the perfect course.
      </p>
      <div class="mt-6">
        <a href="/contact" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-red-700 hover:bg-red-800">
          Contact Us
        </a>
      </div>
    </div>
  </div>
</div>
